        <script>
            let name = document.getElementByI("Name");
let email = document.getElementById("email");
let phone = document.getElementById("phone");
let password = document.getElementById("password");
 let flag = 1;

function validationform(){
if(Name.value==""){
    document.getElementById("nameERROR").innerHTML="please fill This section";
}
else if(Name.value.lenght<3){
    document.getElementById("nameERROR").innerHTML="user name required four digits";
}else{
    document.getElementById("nameERROR").innerHTML = "";
    flag = 1;
}



if(email.value==""){
    document.getElementById("emaERROR").innerHTML="please fill This section";
    flag =0;
}
else if(email.value.lenght<3){
    document.getElementById("emaERROR").innerHTML="user name required four digits";
    flag =0;
}else{
    document.getElementById("emaERROR").innerHTML = "";
    flag = 1;
}



if(phone.value==""){
    document.getElementById("phoERROR").innerHTML="please fill This section";
    flag =0;
}
else if(phone.value.lenght<3){
    document.getElementById("phoERROR").innerHTML="user name required four digits";
    flag =0;
}else{
    document.getElementById("phoERROR").innerHTML = "";
    flag = 1;
}



if(password.value==""){
    document.getElementById("passERROR").innerHTML="please fill This section";
    flag =0;
}
else if(password.value.lenght<3){
    document.getElementById("passERROR").innerHTML="user name required four digits";
    flag =0;
}
else{
    document.getElementById("passERROR").innerHTML = "";
    flag = 1;
}
if (flag){
    return true;
}
else{
    return false;
}
}
